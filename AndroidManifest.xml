<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.van2k.sample.van2kbros"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application android:label="@string/app_name">
        <activity android:name="MyActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.van2k.gamesdk.RankingActivity" android:configChanges="orientation" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name="com.van2k.gamesdk.SignUpActivity" android:configChanges="orientation" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name="com.van2k.gamesdk.InductSignUpActivity" android:configChanges="orientation" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name="com.van2k.gamesdk.WithdrawActivity" android:configChanges="orientation" android:theme="@android:style/Theme.Dialog"></activity>

    </application>
</manifest> 
